<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/manager.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.DullPointers.controller.ManagerController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-bar">
            <padding><Insets bottom="15" left="20" right="20" top="15" /></padding>
            <Text styleClass="header-title" text="Inventory Management" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" styleClass="logout-button" text="Logout" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets bottom="20" left="20" right="10" top="20" /></padding>
            <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colBarcode" prefWidth="100.0" text="Barcode" />
                    <TableColumn fx:id="colName" prefWidth="200.0" text="Product Name" />
                    <TableColumn fx:id="colPrice" prefWidth="100.0" text="Price" />
                    <TableColumn fx:id="colStock" prefWidth="80.0" text="Stock" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <Button onAction="#handleRefresh" text="Refresh List" />
        </VBox>
    </center>

    <right>
        <VBox spacing="15" styleClass="sidebar">
            <padding><Insets bottom="20" left="15" right="20" top="20" /></padding>

            <Label styleClass="section-header" text="Product Details" />

            <VBox spacing="5">
                <Label text="Barcode / SKU" />
                <TextField fx:id="barcodeField" promptText="Unique ID" />
            </VBox>

            <VBox spacing="5">
                <Label text="Name" />
                <TextField fx:id="nameField" promptText="Product Name" />
            </VBox>

            <VBox spacing="5">
                <Label text="Selling Price" />
                <TextField fx:id="priceField" promptText="0.00" />
            </VBox>

            <VBox spacing="5">
                <Label text="Initial Stock" />
                <TextField fx:id="stockField" promptText="0" />
            </VBox>

            <Label fx:id="msgLabel" wrapText="true" />

            <Button maxWidth="Infinity" onAction="#handleSaveProduct" styleClass="action-button" text="Save Product" />
            <Button maxWidth="Infinity" onAction="#handleClear" styleClass="secondary-button" text="Clear Form" />
        </VBox>
    </right>

</BorderPane>